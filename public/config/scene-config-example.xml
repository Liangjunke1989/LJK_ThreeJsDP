<?xml version="1.0" encoding="UTF-8"?>
<scene-config>
    <!-- 相机配置 -->
    <camera>
        <!-- 初始相机位置 - 可以调整这些值来改变视角 -->
        <position>
            <x>10.0</x>
            <y>15.0</y>
            <z>80.0</z>
        </position>
        <!-- 相机朝向目标点 - 调整这些值来改变相机朝向 -->
        <lookAt>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </lookAt>
        <!-- 相机监听配置 -->
        <monitor>
            <enabled>true</enabled>
            <interval>1000</interval>
            <logPosition>true</logPosition>
            <logLookAt>true</logLookAt>
        </monitor>
    </camera>
    
    <!-- 模型配置 -->
    <models>
        <!-- 简化GLTF模型列表 - 用于主要建筑模型 -->
        <gltf-simply-models>
            <model>
                <url>gltf/DP_BanGong01_Simply.glb</url>
                <type>gltf</type>
                <name>主建筑</name>
                <playAction></playAction>
                <position>
                    <x>0</x>
                    <y>0</y>
                    <z>0</z>
                </position>
                <rotation>
                    <x>0</x>
                    <y>0</y>
                    <z>0</z>
                </rotation>
                <scale>1.2</scale>
            </model>
            <model>
                <url>gltf/office_1.gltf</url>
                <type>gltf</type>
                <name>办公楼</name>
                <playAction></playAction>
                <position>
                    <x>50</x>
                    <y>0</y>
                    <z>30</z>
                </position>
                <rotation>
                    <x>0</x>
                    <y>1.57</y>
                    <z>0</z>
                </rotation>
                <scale>0.8</scale>
            </model>
        </gltf-simply-models>
        
        <!-- 完整GLTF模型列表 - 用于详细模型 -->
        <gltf-models>
            <model>
                <url>gltf/detailed_building.gltf</url>
                <type>gltf</type>
                <name>详细建筑</name>
                <playAction></playAction>
                <position>
                    <x>-30</x>
                    <y>0</y>
                    <z>20</z>
                </position>
                <rotation>
                    <x>0</x>
                    <y>0</y>
                    <z>0</z>
                </rotation>
            </model>
        </gltf-models>
        
        <!-- 巡逻人员模型列表 - 用于动态角色 -->
        <patrol-models>
            <model>
                <id>0</id>
                <url>gltf/Soldier.glb</url>
                <type>gltf</type>
                <name>巡逻员1</name>
                <playAction>Run</playAction>
                <position>
                    <x>0</x>
                    <y>0</y>
                    <z>0</z>
                </position>
                <rotation>
                    <x>0</x>
                    <y>3.14159</y>
                    <z>0</z>
                </rotation>
                <scale>1</scale>
            </model>
            <model>
                <id>1</id>
                <url>gltf/guard.glb</url>
                <type>gltf</type>
                <name>保安</name>
                <playAction>Idle</playAction>
                <position>
                    <x>20</x>
                    <y>0</y>
                    <z>40</z>
                </position>
                <rotation>
                    <x>0</x>
                    <y>0</y>
                    <z>0</z>
                </rotation>
                <scale>1</scale>
            </model>
        </patrol-models>
    </models>
    
    <!-- 标签配置 - 用于显示设备信息 -->
    <labels>
        <label>
            <color>#3ac9b0</color>
            <name>主建筑标签</name>
            <value>主办公楼</value>
            <position>
                <x>0</x>
                <y>10</y>
                <z>0</z>
            </position>
            <scale>1.2</scale>
        </label>
        <label>
            <color>#ff6b6b</color>
            <name>设备标签</name>
            <value>监控设备</value>
            <position>
                <x>15</x>
                <y>5</y>
                <z>25</z>
            </position>
            <scale>1</scale>
        </label>
        <label>
            <color>#4ecdc4</color>
            <name>入口标签</name>
            <value>主入口</value>
            <position>
                <x>-10</x>
                <y>3</y>
                <z>15</z>
            </position>
            <scale>1</scale>
        </label>
    </labels>
    
    <!-- 围栏配置 - 用于安全区域 -->
    <fence>
        <points>
            <point>
                <x>-50</x>
                <y>0.1</y>
                <z>-50</z>
            </point>
            <point>
                <x>50</x>
                <y>0.1</y>
                <z>-50</z>
            </point>
            <point>
                <x>50</x>
                <y>0.1</y>
                <z>50</z>
            </point>
            <point>
                <x>-50</x>
                <y>0.1</y>
                <z>50</z>
            </point>
            <point>
                <x>-50</x>
                <y>0.1</y>
                <z>-50</z>
            </point>
        </points>
        <color>rgb(51, 188, 176)</color>
    </fence>
    
    <!-- 巡逻路径配置 - 用于角色移动路径 -->
    <patrol-paths>
        <path name="主巡逻路径">
            <points>
                <point>
                    <x>-40</x>
                    <y>0.1</y>
                    <z>-40</z>
                </point>
                <point>
                    <x>40</x>
                    <y>0.1</y>
                    <z>-40</z>
                </point>
                <point>
                    <x>40</x>
                    <y>0.1</y>
                    <z>40</z>
                </point>
                <point>
                    <x>-40</x>
                    <y>0.1</y>
                    <z>40</z>
                </point>
                <point>
                    <x>-40</x>
                    <y>0.1</y>
                    <z>-40</z>
                </point>
            </points>
        </path>
        <path name="内部巡逻路径">
            <points>
                <point>
                    <x>-20</x>
                    <y>0.1</y>
                    <z>-20</z>
                </point>
                <point>
                    <x>20</x>
                    <y>0.1</y>
                    <z>-20</z>
                </point>
                <point>
                    <x>20</x>
                    <y>0.1</y>
                    <z>20</z>
                </point>
                <point>
                    <x>-20</x>
                    <y>0.1</y>
                    <z>20</z>
                </point>
                <point>
                    <x>-20</x>
                    <y>0.1</y>
                    <z>-20</z>
                </point>
            </points>
        </path>
    </patrol-paths>
</scene-config> 